# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Database Configuration (Phase 2)
DATABASE_URL=sqlite:///recipe_generator.db
# For PostgreSQL: postgresql://user:password@localhost:5432/recipe_generator

# JWT Configuration (Phase 2)
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 hours in seconds

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=10

# Model Configuration
USE_GPU=False
MODEL_PATH=Foodimg2Ing/data/modelbest.ckpt

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# File Upload
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=Foodimg2Ing/static/demo_imgs
